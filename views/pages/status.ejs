<%- include('../layouts/header') -%>
<h3>Syncing: <%= syncStats !== false %></h3>
<% if(syncStats !== false) { %>
	<h3>Syncing status:</h3>
	<table class="table table-bordered">
		<% Object.keys(syncStats).forEach(function(item) { %>
			<tr>
				<td><%= item %></td>
				<td>
					<% if(item == 'currentBlock') { %>
						<a href="/blocks/<%= syncStats[item] %>"><%= syncStats[item] %></a>
					<% } else { %>
						<%= syncStats[item] %>
					<% } %>
				</td>
			</tr>
		<% }); %>
	</table>
<% } else { %>
	<div>Latest block: <a class='latestBlockLink' href="/blocks/<%= latestBlock %>"><span class='latestBlockLinkText'><%= latestBlock %></span></a></div>
<% } %>
<h3>PeerCount: <%= peerCount %></h3>

<h3>Accounts:</h3>
<table class="table table-bordered">
	<% Object.keys(accounts).forEach(function(item) { %>
		<tr>
			<td><%= item %></td>
			<td>
				<a href="/accounts/<%= accounts[item] %>"><%= accounts[item] %></a>
			</td>
		</tr>
	<% }); %>
</table>
<%- include('../layouts/footer') -%>
